#!/bin/sh
set -e
export Namespace=$(echo '{{ RAIT.Namespace }}' | rait render)
[ "$Namespace" != "off" ] || echo "Namespace=off is unsupported" && false
rait up || rait down && false
[ ! -f /etc/rait/postup ] || /etc/rait/postup
rait render -f /etc/rait/babeld.template | exec nsexec $Namespace babeld -S /dev/null -c /dev/stdin -I ''
